{
  "include": [
    "src",
    "separate_libraries"
  ],
    "extraPaths": [
    "src/MagnusAddon",
    "separate_libraries/queryablecollections/src",
    "separate_libraries/queryablecollections/queryablecollections_tests"
  ],
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "**/.*",
    "src/MagnusAddon/_lib/",
    "**/_lib_patched/*",
    "**venv/*",
    "**/manually_copied_in_libraries/*",
    "**/included_libraries/*"
  ],
  "ignore": [],
  //"off, basic, standard, strict, recommended, all
  "typeCheckingMode": "recommended",
  "reportIgnoreCommentWithoutRule": "none",

  //forced because of incompatibility between basedpyright and pyright, remove once we can use only basedpyright
  "reportUnnecessaryTypeIgnoreComment": "none",

  //not too sure about this one. Gives some hella confusing results making me wonder if it is really accurate...
  "reportImportCycles": "none",

  //questionable if these are useful
  "reportUnusedCallResult": "none",

  //"we probably really don't need these": "",
  "reportImplicitRelativeImport": "none"
}
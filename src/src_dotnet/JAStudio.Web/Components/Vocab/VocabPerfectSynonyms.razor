@using JAStudio.Core.LanguageServices
@using JAStudio.Core.Note.Vocabulary

<RelatedVocabList Vocabs="_vocabs" Title="perfect synonyms, answer automatically synced" CssClass="similar"/>

@code {
    [Parameter, EditorRequired] public VocabNote Note { get; set; } = null!;

    List<VocabNote> _vocabs = [];

    protected override void OnParametersSet()
    {
        _vocabs = VocabNoteSorting.SortVocabListByStudyingStatus(Note.RelatedNotes.PerfectSynonyms.Notes());
    }
}

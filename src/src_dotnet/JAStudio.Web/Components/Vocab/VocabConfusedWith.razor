@using JAStudio.Core.LanguageServices
@using JAStudio.Core.Note.Collection
@using JAStudio.Core.Note.Vocabulary

<RelatedVocabList Vocabs="_vocabs" Title="confused with" CssClass="confused_with"/>

@code {
    [Parameter, EditorRequired] public VocabNote Note { get; set; } = null!;

    [Inject] public VocabCollection VocabCollection { get; set; } = null!;

    List<VocabNote> _vocabs = [];

    protected override void OnParametersSet()
    {
        var confusedWith = Note.RelatedNotes.ConfusedWith.Get();
        _vocabs = VocabNoteSorting.SortVocabListByStudyingStatus(
            VocabCollection.WithAnyFormInPreferDisambiguationNameOrExactMatch(confusedWith.ToList()));
    }
}

@using JAStudio.Core.Note.Collection
@using JAStudio.Core.Note.Vocabulary

<RelatedVocabList Vocabs="_vocabs" Title="derived from" CssClass="derived_from"/>

@code {
    [Parameter, EditorRequired] public VocabNote Note { get; set; } = null!;

    [Inject] public VocabCollection VocabCollection { get; set; } = null!;

    List<VocabNote> _vocabs = [];

    protected override void OnParametersSet()
    {
        _vocabs = VocabCollection.WithFormPreferDisambiguationNameOrExactMatch(Note.RelatedNotes.DerivedFrom.Get());
    }
}

@using JAStudio.Core.Note.Collection
@using JAStudio.Core.Note.Vocabulary

<RelatedVocabList Vocabs="_vocabs" Title="dictionary form" CssClass="is_stem_of"/>

@code {
    [Parameter, EditorRequired] public VocabNote Note { get; set; } = null!;

    [Inject] public VocabCollection VocabCollection { get; set; } = null!;

    List<VocabNote> _vocabs = [];

    protected override void OnParametersSet()
    {
        _vocabs = VocabCollection.WithStem(Note.GetQuestion());
    }
}

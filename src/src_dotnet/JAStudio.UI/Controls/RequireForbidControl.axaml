<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="JAStudio.UI.Controls.RequireForbidControl">
    <StackPanel Orientation="Horizontal" Spacing="10">
        <RadioButton Content="Unset" 
                     IsChecked="{Binding IsUnset, Mode=TwoWay}" 
                     GroupName="{Binding GroupName}" />
        <RadioButton Content="Required" 
                     IsChecked="{Binding IsRequired, Mode=TwoWay}" 
                     GroupName="{Binding GroupName}" />
        <RadioButton Content="Forbidden" 
                     IsChecked="{Binding IsForbidden, Mode=TwoWay}" 
                     GroupName="{Binding GroupName}" />
    </StackPanel>
</UserControl>

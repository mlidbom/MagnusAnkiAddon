<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JAStudio.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1100"
        x:Class="JAStudio.UI.Views.NoteSearchDialog"
        x:DataType="vm:NoteSearchDialogViewModel"
        Title="Find Notes"
        Width="1800" Height="1100"
        Topmost="True"
        WindowStartupLocation="CenterOwner">
    
    <DockPanel Margin="10">
        <!-- Search Box -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding SearchText, Mode=TwoWay}"
                     Watermark="Separate multiple conditions with &amp;&amp;  r:readings-only-condition, a:answer-only-condition, q:question-only-condition"
                     MinWidth="1200"
                     Name="SearchInput">
                <TextBox.KeyBindings>
                    <KeyBinding Gesture="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.KeyBindings>
            </TextBox>
        </StackPanel>

        <!-- Status and Progress Bar -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10" MinHeight="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="{Binding StatusText}" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            
            <ProgressBar Grid.Column="1"
                         IsIndeterminate="True"
                         IsVisible="{Binding IsSearching}"
                         MinHeight="20"/>
        </Grid>

        <!-- Results Table -->
        <ListBox ItemsSource="{Binding Results}"
                  SelectedItem="{Binding SelectedResult}"
                  DoubleTapped="OnResultDoubleClick"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="Gray">
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="100,300,*" Margin="2">
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding NoteType}" 
                                   VerticalAlignment="Center" 
                                   Padding="5"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Question}" 
                                   FontFamily="Meiryo UI,Yu Gothic UI,Microsoft YaHei UI"
                                   FontSize="18"
                                   VerticalAlignment="Center" 
                                   Padding="5"/>
                        
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Answer}" 
                                   VerticalAlignment="Center" 
                                   Padding="5"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JAStudio.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="JAStudio.UI.Views.EnglishWordSearchDialog"
        x:DataType="vm:EnglishWordSearchDialogViewModel"
        Title="Find English Words"
        Width="800" Height="600"
        Topmost="True"
        WindowStartupLocation="Manual">
    
    <DockPanel Margin="10">
        <!-- Search Box -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding SearchText, Mode=TwoWay}"
                     Watermark="Enter the beginning of an English word"
                     MinWidth="600"
                     Name="SearchInput"/>
        </StackPanel>

        <!-- Results Table -->
        <ListBox ItemsSource="{Binding Results}"
                  SelectedItem="{Binding SelectedResult}"
                  DoubleTapped="OnResultDoubleClick"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="Gray">
            
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="vm:EnglishWordResultViewModel">
                    <Grid ColumnDefinitions="Auto,*" Margin="2">
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Word}" 
                                   VerticalAlignment="Center" 
                                   Padding="5"
                                   FontWeight="Bold"
                                   MinWidth="150"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Definition}" 
                                   VerticalAlignment="Center" 
                                   Padding="5"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>

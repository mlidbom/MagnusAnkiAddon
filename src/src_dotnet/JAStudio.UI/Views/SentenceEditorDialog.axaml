<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JAStudio.UI.ViewModels"
        x:Class="JAStudio.UI.Views.SentenceEditorDialog"
        x:DataType="vm:SentenceEditorViewModel"
        Title="{Binding Title}"
        SizeToContent="WidthAndHeight"
        MinWidth="700" MinHeight="300"
        Design.Width="800" Design.Height="700"
        WindowStartupLocation="Manual">

    <Design.DataContext>
        <vm:SentenceEditorViewModel />
    </Design.DataContext>

    <LayoutTransformControl>
        <LayoutTransformControl.LayoutTransform>
            <ScaleTransform ScaleX="0.85" ScaleY="0.85" />
        </LayoutTransformControl.LayoutTransform>
    <DockPanel Margin="10">
        <!-- Button bar at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="OK" Command="{Binding SaveCommand}" Width="80" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" />
        </StackPanel>

        <!-- Scrollable content -->
        <ScrollViewer>
            <StackPanel Spacing="10" Margin="5" Width="700">

                <!-- User Fields -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="User" FontWeight="SemiBold" FontSize="14" />

                        <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Question" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding UserQuestion}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Answer" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding UserAnswer}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Comments" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UserComments}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Reading" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Reading}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Source Fields (read-only) -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Source" FontWeight="SemiBold" FontSize="14" />

                        <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Question" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourceQuestion}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Answer" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SourceAnswer}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Comments" VerticalAlignment="Top" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SourceComments}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" />
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
    </LayoutTransformControl>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JAStudio.UI.ViewModels"
        x:Class="JAStudio.UI.Views.MissingFilesDialog"
        Title="Missing Files in Anki"
        Width="950" Height="600"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <LayoutTransformControl>
        <LayoutTransformControl.LayoutTransform>
            <ScaleTransform ScaleX="0.85" ScaleY="0.85" />
        </LayoutTransformControl.LayoutTransform>
        <DockPanel Margin="10">
            <Button DockPanel.Dock="Bottom" Content="Close" Click="OnCloseClick"
                    HorizontalAlignment="Right" Width="80" Margin="0,10,0,0" />

            <TabControl x:Name="TabHost">
                <TabItem x:Name="VocabTab" Header="Vocab">
                    <DataGrid x:Name="VocabGrid" IsReadOnly="True" AutoGenerateColumns="False"
                              CanUserSortColumns="True" CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Question" Binding="{Binding Question}" Width="*" />
                            <DataGridTextColumn Header="Note ID" Binding="{Binding NoteId}" Width="200" />
                            <DataGridTextColumn Header="Field" Binding="{Binding FieldName}" Width="120" />
                            <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem x:Name="SentenceTab" Header="Sentences">
                    <DataGrid x:Name="SentenceGrid" IsReadOnly="True" AutoGenerateColumns="False"
                              CanUserSortColumns="True" CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Question" Binding="{Binding Question}" Width="*" />
                            <DataGridTextColumn Header="Note ID" Binding="{Binding NoteId}" Width="200" />
                            <DataGridTextColumn Header="Field" Binding="{Binding FieldName}" Width="120" />
                            <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem x:Name="KanjiTab" Header="Kanji">
                    <DataGrid x:Name="KanjiGrid" IsReadOnly="True" AutoGenerateColumns="False"
                              CanUserSortColumns="True" CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Question" Binding="{Binding Question}" Width="*" />
                            <DataGridTextColumn Header="Note ID" Binding="{Binding NoteId}" Width="200" />
                            <DataGridTextColumn Header="Field" Binding="{Binding FieldName}" Width="120" />
                            <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </LayoutTransformControl>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="JAStudio.UI.Views.AboutDialog"
        Title="About JAStudio"
        Width="400" Height="250"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <StackPanel Margin="20" Spacing="15" VerticalAlignment="Center">
        <TextBlock Text="JAStudio" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
        <TextBlock Text="Japanese Language Learning Tools for Anki" 
                   FontSize="14" 
                   HorizontalAlignment="Center" 
                   TextWrapping="Wrap"
                   TextAlignment="Center" />
        <TextBlock Text="Avalonia UI Integration" 
                   FontSize="12" 
                   Foreground="Gray"
                   HorizontalAlignment="Center" />
        <TextBlock Text="Version 1.0.0" 
                   FontSize="12" 
                   Foreground="Gray"
                   HorizontalAlignment="Center" />
        
        <Button Content="OK" 
                Width="80" 
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Click="OnOkClick" />
    </StackPanel>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="JAStudio.UI.Views.ContextMenuPopup"
        Title="JAStudio Menu"
        Width="300" Height="120"
        WindowStartupLocation="Manual"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        Background="#2D2D30"
        BorderBrush="#3E3E42"
        BorderThickness="1"
        Topmost="True">

    <StackPanel Margin="4" Spacing="2">
        <!-- Clipboard Content Item -->
        <Border Background="Transparent"
                Padding="8,4"
                PointerEntered="OnMenuItemEnter"
                PointerExited="OnMenuItemExit"
                PointerPressed="OnClipboardItemClick"
                x:Name="ClipboardItem">
            <TextBlock x:Name="ClipboardText" 
                       Text="Clipboard: (empty)"
                       Foreground="White"
                       FontSize="12" />
        </Border>
        
        <!-- Selection Content Item -->
        <Border Background="Transparent"
                Padding="8,4"
                PointerEntered="OnMenuItemEnter"
                PointerExited="OnMenuItemExit"
                PointerPressed="OnSelectionItemClick"
                x:Name="SelectionItem">
            <TextBlock x:Name="SelectionText" 
                       Text="Selection: (empty)"
                       Foreground="White"
                       FontSize="12" />
        </Border>
    </StackPanel>
</Window>

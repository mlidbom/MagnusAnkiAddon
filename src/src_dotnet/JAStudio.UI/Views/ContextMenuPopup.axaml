<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="JAStudio.UI.Views.ContextMenuPopup"
        Title="JAStudio Menu"
        Width="250"
        SizeToContent="Height"
        WindowStartupLocation="Manual"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        Topmost="True">

    <Border BorderBrush="#707070"
            BorderThickness="1"
            Background="#F0F0F0"
            CornerRadius="2"
            Padding="2">
        <Menu x:Name="MainMenu"
              Background="Transparent">
            <Menu.Styles>
                <Style Selector="MenuItem">
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
                    <Setter Property="Background" Value="#3399FF"/>
                </Style>
                <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
                    <Setter Property="TextBlock.Foreground" Value="White"/>
                </Style>
            </Menu.Styles>
            
            <MenuItem x:Name="ClipboardMenuItem" 
                      Header="Clipboard: (empty)" 
                      Click="OnClipboardItemClick" />
            <MenuItem x:Name="SelectionMenuItem" 
                      Header="Selection: (empty)" 
                      Click="OnSelectionItemClick" />
        </Menu>
    </Border>
</Window>

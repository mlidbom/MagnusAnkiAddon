<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JAStudio.UI.ViewModels"
        x:Class="JAStudio.UI.Views.VocabEditorDialog"
        x:DataType="vm:VocabEditorViewModel"
        Title="{Binding Title}"
        SizeToContent="WidthAndHeight"
        MinWidth="700" MinHeight="400"
        Design.Width="800" Design.Height="900"
        WindowStartupLocation="Manual">

    <Design.DataContext>
        <vm:VocabEditorViewModel />
    </Design.DataContext>

    <LayoutTransformControl>
        <LayoutTransformControl.LayoutTransform>
            <ScaleTransform ScaleX="0.85" ScaleY="0.85" />
        </LayoutTransformControl.LayoutTransform>
    <DockPanel Margin="10">
        <!-- Button bar at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="OK" Command="{Binding SaveCommand}" Width="80" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" />
        </StackPanel>

        <!-- Scrollable content -->
        <ScrollViewer>
            <StackPanel Spacing="10" Margin="5" Width="700">

                <!-- Core Fields -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Core" FontWeight="SemiBold" FontSize="14" />

                        <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Question" VerticalAlignment="Center" Margin="0,0,0,6" />
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Question}" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Readings" VerticalAlignment="Center" Margin="0,0,0,6" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Readings}" Watermark="comma separated" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Forms" VerticalAlignment="Center" Margin="0,0,0,6" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Forms}" Watermark="comma separated" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Parts of Speech" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding PartsOfSpeech}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- User Fields -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="User" FontWeight="SemiBold" FontSize="14" />

                        <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Answer" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding UserAnswer}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Explanation" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding UserExplanation}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Explanation (long)" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UserExplanationLong}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Mnemonic" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding UserMnemonic}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Compounds" VerticalAlignment="Center" />
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding UserCompounds}" Watermark="comma separated" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Source Fields (read-only) -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Source" FontWeight="SemiBold" FontSize="14" />

                        <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Answer" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SourceAnswer}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mnemonic" VerticalAlignment="Top" Margin="0,0,0,6" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SourceMnemonic}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" Margin="0,0,0,6" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Reading Mnemonic" VerticalAlignment="Top" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SourceReadingMnemonic}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="50" />
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
    </LayoutTransformControl>
</Window>

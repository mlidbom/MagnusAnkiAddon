<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="560" d:DesignHeight="120"
             x:Class="JAStudio.UI.Dialogs.TaskProgressScopePanel">

    <Border BorderBrush="#40808080" BorderThickness="0,0,0,1" Padding="0,4,0,8">
        <StackPanel Spacing="4">
            <!-- Scope heading + elapsed time -->
            <DockPanel>
                <TextBlock x:Name="ElapsedLabel"
                           DockPanel.Dock="Right"
                           Text=""
                           FontSize="12"
                           Foreground="#999999"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
                <TextBlock x:Name="ScopeHeading"
                           Text="Task"
                           FontWeight="SemiBold"
                           FontSize="14"/>
            </DockPanel>

            <!-- Container for child TaskProgressPanel instances -->
            <StackPanel x:Name="ChildPanelContainer" Spacing="4" Margin="12,0,0,0"/>
        </StackPanel>
    </Border>
</UserControl>

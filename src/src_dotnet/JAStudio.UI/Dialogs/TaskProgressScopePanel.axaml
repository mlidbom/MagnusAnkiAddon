<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:JAStudio.UI.Dialogs"
             xmlns:taskRunners="clr-namespace:JAStudio.Core.TaskRunners;assembly=JAStudio.Core"
             mc:Ignorable="d" d:DesignWidth="560" d:DesignHeight="120"
             x:Class="JAStudio.UI.Dialogs.TaskProgressScopePanel">

    <Border x:Name="ScopeBorder"
            BorderBrush="#50607080"
            BorderThickness="1"
            CornerRadius="3"
            Padding="8,5,8,6"
            Margin="0,3">
        <StackPanel Spacing="4">
            <!-- Scope heading + elapsed time -->
            <DockPanel>
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding ElapsedText}"
                           FontSize="11"
                           Foreground="#999999"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Heading}"
                           FontWeight="SemiBold"
                           FontSize="12"/>
            </DockPanel>

            <!-- Child progress panels: different templates for spinner vs batch vs nested scope -->
            <ItemsControl ItemsSource="{Binding Children}" Margin="8,0,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.DataTemplates>
                    <DataTemplate DataType="{x:Type taskRunners:BatchTaskProgressViewModel}">
                        <dialogs:BatchTaskProgressPanel />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type taskRunners:TaskProgressViewModel}">
                        <dialogs:SpinnerProgressPanel />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type taskRunners:TaskProgressScopeViewModel}">
                        <dialogs:TaskProgressScopePanel />
                    </DataTemplate>
                </ItemsControl.DataTemplates>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
